{
  "name": "sau-admin",
  "private": true,
  "version": "0.0.0",
  "author": "Edan.Lee",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:frontend": "vite build",
    "build:electron": "electron-builder --mac --x64 --publish=never",
    "build:all": "npm run build:frontend && npm run build:electron",
    "pack": "npm run build:frontend && npm run build:electron",
    "build:electron:linux": "electron-builder --linux --x64 --publish=never",
    "build:electron:win": "electron-builder --win --x64 --publish=never"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.9.0",
    "element-plus": "^2.9.11",
    "pinia": "^3.0.2",
    "sass": "^1.89.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^6.3.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.sau.media.automation",
    "productName": "SAU自媒体自动化运营系统",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}